{
  "name": "calhacks2025",
  "version": "1.0.0",
  "description": "CalHacks 2025 - Electron + Flask + React Application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "start-backend": "node scripts/start-backend.js",
    "start-frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "build-frontend": "cd frontend && npm run build",
    "dist": "npm run build && electron-builder",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win",
    "dist-linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "cd frontend && npm install"
  },
  "keywords": [
    "electron",
    "flask",
    "react",
    "desktop",
    "calhacks"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^27.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.calhacks2025.app",
    "productName": "CalHacks 2025",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/build/**/*",
      "scripts/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
