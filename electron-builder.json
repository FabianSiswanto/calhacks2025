{
  "appId": "com.calhacks2025.app",
  "productName": "CalHacks 2025",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "preload.js",
    "backend/**/*",
    "frontend/build/**/*",
    "scripts/**/*",
    "node_modules/**/*",
    "!backend/__pycache__/**/*",
    "!backend/**/*.pyc",
    "!frontend/node_modules/**/*",
    "!**/*.map"
  ],
  "extraResources": [
    {
      "from": "backend",
      "to": "backend",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Development"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
